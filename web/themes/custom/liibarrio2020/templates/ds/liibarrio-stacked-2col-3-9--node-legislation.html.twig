<{{ outer_wrapper }}{{ attributes.addClass('row') }}>

  {{ title_suffix.contextual_links }}

  <div class="mobile-only open-filter">
    <a href="#" role="button" class="btn btn-black" id="toggle_filters" aria-controls="sidebar_first" aria-expanded="false">Open Details</a>
  </div>

  {# Main #}

  <div{{ left_attributes.addClass('layout-sidebar layout-sidebar--first col') }} id="sidebar_first">
    <aside class="content-aside--inner-wrapper section">
      <div class="sidebar-block drop-shadow">
        <div class="beige">
          {{ left.field_frbr_uri }}
        </div>
      </div>
      <div class="sidebar-block drop-shadow top-right-radius">
        <div class="beige top-right-radius">
          <h3>Details</h3>
        </div>
        <div class="white thin-border">
          {{ left.field_lifecycle }}
          {{ left.field_publication_name }}
          {{ left.field_primary_work }}
          {{ left.field_publication_date }}
          {{ left.field_expression_date }}
          {{ left.field_commencement_date }}
        </div>
      </div>
      <div class="sidebar-block drop-shadow top-right-radius">
        <div class="beige top-right-radius">
          <h3>Related</h3>
        </div>
        <div class="white thin-border">
          {{ left['dynamic_block_field:node-related_legislation'] }}
          {{ left['dynamic_block_field:node-similar_legislation'] }}
        </div>
      </div>
      <div class="sidebar-block drop-shadow top-right-radius">
        <div class="beige top-right-radius">
          <h3>PDF</h3>
        </div>
        <div class="white thin-border">
          {{ left.field_files }}
        </div>
      </div>
      <div class="sidebar-block drop-shadow top-right-radius">
        <div class="beige top-right-radius">
          <h3>Sharing</h3>
        </div>
        <div class="thin-border white">
          {{ left['dynamic_token_field:node-share_links'] }}
        </div>
      </div>
      
    </aside>
  </div>

  <div {{ right_attributes.addClass('layout-main col') }} id="content">
    {# Header #}
    <section class="section">
    {% if header_left|render or header_right|render %}
      
        <header class="content-top content-header--wrapper">
          <div class="content-header--top row">
            {% if header_left %}
              <{{ header_left_wrapper }}{{ header_left_attributes.addClass('content-header--left left col') }}>
                {{- header_left -}}
              </{{ header_left_wrapper }}>
            {% endif %}
            {% if header_right %}
              <{{ header_right_wrapper }}{{ header_right_attributes.addClass('content-header--right right col text-right') }}>
                {{- header_right -}}
              </{{ header_right_wrapper }}>
            {% endif %}
          </div>
          {% if header %}
            <div class="content-header--bottom">
              <{{ header_wrapper }}{{ header_attributes.addClass('content-header w-100 pt-2') }}>
                {{ header}}
              </{{ header_wrapper }}>
            </div>
          {% endif %}
        </header> 
      
    {% endif %}
    <div class="full_judgment content drop-shadow top-right-radius white">
      <div class="dark-beige top-right-radius">
        <h3>Full Legislation</h3>
      </div>
      <div class="white thin-border">
        {{ right }}
      </div>
    </div>
  </section>
</div>

  {# Footer #}
  <{{ footer_wrapper }}{{ footer_attributes.addClass('content-footer') }}>
    {{ footer }}
  </{{ footer_wrapper }}>

</{{ outer_wrapper }}>
